---
import { MENU_ITEMS, SITE_TITLE, SOCIAL_LINKS } from "@/consts";
import MobileMenu from "./MobileMenu.astro";
import HeaderLink from "./HeaderLink.astro";
---

<header class="pt-8 md:pt-11">
  <div>
    <nav
      class="min-h-16 flex justify-between md:items-center md:grid md:grid-cols-2"
    >
      <div class="col-span-1">
        <h2 class="font-extrabold text-black text-[28px]">
          <a href="/">{SITE_TITLE}</a>
        </h2>
        <div
          class="font-normal text-xl flex gap-x-[10px] items-center flex-wrap"
        >
          <!-- <a href="#" class="underline text-link">Instagram</a>
          <a href="#" class="underline text-link">Twitter</a> -->
          {
            SOCIAL_LINKS.map((link) => (
              <a href={link.link} class="underline text-link">
                {link.title}
              </a>
            ))
          }
        </div>
      </div>

      <ul
        class="md:flex md:flex-wrap gap-x-4 hidden md:justify-end items-center font-semibold text-xl col-span-1"
      >
        <!-- <li>
          <HeaderLink href="/work">Work</HeaderLink>
        </li>
        <li>
          <HeaderLink href="/dev">Dev</HeaderLink>
        </li>
        <li>
          <HeaderLink href="/blog">Blog</HeaderLink>
        </li> -->
        {
          MENU_ITEMS.map((item) => (
            <li>
              <HeaderLink href={item.link}>{item.title}</HeaderLink>
            </li>
          ))
        }
      </ul>

      <div class="md:hidden">
        <MobileMenu client:load />
      </div>
    </nav>
  </div>
</header>
