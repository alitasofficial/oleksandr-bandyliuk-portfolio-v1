---
import ThingsCard from "./ThingsCard.astro";
import { THINGS_SETTINGS } from "@/consts";
---

<section id="things" class="mt-11">
  <div class="flex justify-between py-[6px]">
    <h3 class="font-[700] text-[28px] leading-8">{THINGS_SETTINGS.title}</h3>
    <h3 class="font-normal text-[28px] leading-8 hidden md:block">
      {THINGS_SETTINGS.subtitle}
    </h3>
  </div>
  <div class="flex flex-col gap-[10px]">
    {
      THINGS_SETTINGS.cards.map((card) => (
        <ThingsCard
          title={card.title}
          desc={card.desc}
          platforms={card.platforms}
          imgSrc={card.image}
        />
      ))
    }
  </div>
</section>
