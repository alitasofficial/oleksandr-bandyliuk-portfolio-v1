---
import Column from "./Column.astro";
import { FAVORITES_SETTINGS } from "@/consts";
---

<section id="things" class="mt-11">
  <div class="flex justify-between py-[6px]">
    <h3 class="font-[700] text-[28px] leading-8">{FAVORITES_SETTINGS.title}</h3>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-5 text-start gap-4">
    {
      FAVORITES_SETTINGS.columns.map((card) => (
        <Column title={card.title} items={card.items} />
      ))
    }
  </div>
</section>
