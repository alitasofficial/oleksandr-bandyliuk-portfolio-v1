---
import { VISITED_COUNTRIES_SETTINGS } from "@/consts";
import { getCollection } from "astro:content";
import CountryCard from "./CountryCard.astro";
---

<section id="archived-projects" class="mt-11">
  <div class="flex justify-between py-[6px]">
    <h3 class="header_primary">
      {VISITED_COUNTRIES_SETTINGS.title}
    </h3>
    <h4 class="header_secondary hidden md:block">
      {VISITED_COUNTRIES_SETTINGS.subtitle}
    </h4>
  </div>
  <ul class="mt-2 grid gap-2">
    {
      VISITED_COUNTRIES_SETTINGS.countries.map((country) => (
        <CountryCard country={country} />
      ))
    }
  </ul>
</section>
